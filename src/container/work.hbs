{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div class="m-3">
  {{#with main}}
   <main> 
    <section>
      <div class="text-center">
        {{> title data='Work history' big=true}}
        </div>

        <div>
          <ul>
            {{#each works}}
               <li>
                  <div class="m-3">{{position}}</div>

                  

                  <div class="m-3">
                    {{duration.from}} - 
                    {{#if duration.to}} 
                      {{duration.to}} 
                    {{else}}
                       (досі працюю) 
                    {{/if}}
                  </div>

                  

                  <div class="m-3">
                    {{#if company.url}}
                    {{> link text=company.name href=company.url blank=true noLine=true}}
                    {{else}}
                    <b>{{company.name}}</b>
                    {{/if}}
                  </div>
                  
                  

                  <div class="m-3">
                    <strong>Projects ({{projectAmount}})</strong>
                  </div>

                  
                   <div class="m-5">
                  <ul>
                    {{#each projects}}
                    <li>
                       <div>{{> link text=name href=url blank=true noLine=true}}</div>
                       
                       
                       

                       <div class="m-3">{{about}}</div>
                       
                       
                      
                       <li>
                        <div class="m-3">
                          <em>Project stacks ({{stackAmount}})</em>
                        </div>
                       </li>
                      

                       
                      

                       <div class="m-3">
                            <ul>
                              {{#each stacks}}
                                   <li>{{name}}</li>                               
                              {{/each}}
                            </ul>
                       </div>

                        
                        
                       
                        <div class="m-3">
                            <em>Project awards({{awardAmount}})</em>
                        </div>

                        
                        

                        <div class="m-3">
                          <ul>
                            {{#each awards}}
                               <li>{{name}}</li>
                            {{/each}}
                           </ul>
                       </div>
                      </li>
                    {{/each}}
                  </ul>
                  </div>
               </li>
              
            {{/each}}
          </ul>
        </div>
    </section>

   </main>
 {{/with}}
</div>

