<main class='p-5'>
  <div class='row'>
    <div class='col-12'>
     

     <section>
      <div class='text-center py-5'>
        {{#with newsBlock}}
          <h2>{{title}}</h2>
          <div class='row gx-4 gy-3'>
            {{#each cards}}
              <section class='col-3'>
                <div class='card text-bg-dark'>
                  <div class='card-header'>{{title}}
                    {{#if isTop includeZero=true}}<button
                        class='badge rounded-pill text-bg-success text-uppercase'
                      >top</button>
                    {{/if}}

                    {{#if isNew includeZero=true}}
                      <button
                        class='badge rounded-pill text-bg-danger text-uppercase'
                      >new</button>
                    {{/if}}
                  </div>
                  <div class='card-body'>
                    <p>{{description}}</p>
                  </div>
                </div>
              </section>
            {{/each}}
          </div>
        {{/with}}
      </div>
      </section>

      <hr class="m-5">

       
          {{#with goodsBlock}}
          <nav class="nav nav-tabs mb-5">
            <ul class="d-flex list-unstyled">
            
           {{#each tabs}}
            <li>
               <a href="#" class="nav-link {{#if isDisabled includeZero=true}} disabled {{/if}} {{#if isActive includeZero=true}} active {{/if}}">
                  {{text}}       
               </a>
            </li>          
           {{/each}}

           </ul>
          </nav>
          <section>
            <div class='row gx-3 gx-4'>
          
            {{#each cards}}
              <section class="col-4">
                <div class="card">
                 
             {{#with this}}
            
          
               <div class='nav-item'>
                   <img class='card-img-top' src='{{image}}' />
                   <div>
                   <h4 class="card-title m-3">
                    {{title}}
                   </h4>
                   
                    <div>
                      <span class="badge rounded-pill {{#if isHot includeZero=true}} text-bg-danger text-uppercase {{/if}}">hot</span>
                      <span class="badge rounded-pill {{#if isNew includeZero=true}} text-bg-warning text-uppercase {{/if}}">new</span>
                    </div>


                   <div>
                   <p class="m-3">{{description}}</p>
                   </div>
              
                 
             {{/with}}
        
             </div>
              </section>
            {{/each}}
           </div>          

            </section>
          {{/with}}
       
      


      <hr class="m-5">

      <section>
          
          {{#with subscribe}}
         
            <div class="row">
             
          <div class='card alert text-bg-dark text-light'> 
           <div class="row">
            <div class="col-6">
            <h2 class='m-3 mb-3'>{{header}}</h2>
            <p class="m-3 ">{{description}}</p>
           </div>
            <div class="text-end col-6">
              {{#each buttons}}
                <a
                  class="btn btn-primary m-3 my-5" href="{{link}}"
                >{{text}}</a>
              {{/each}}
              
              </div>
            </div>
            </div>
            </div>
          {{/with}}
       
      </section>

      <hr class="m-3">

      <section>
      {{#with service}}
         <div class='alert bg-success text-light text-center'>          
            <h2 class="mb-3">{{title}}</h2>
            <p class="mb-0">{{description}}</p>
            <div class="nav-item">
            {{#each buttons}}
             <a class="btn btn-primary me-1 mt-4" href="{{link}}">{{text}}</a>
            {{/each}}           
            </div>       
        </div> 
       {{/with}}
      </section>

       <hr class="m-5">
           </div>
  </div>
</main>

