<main class='m-3 p-4'>

 

    {{#with formBlock}}

 <div class='row col-12'>

      <div class='col-8'>
        <h1>{{header}}</h1>

        <div>
          {{#with rating}}
            <div class='p-3'>
              <a>{{title}}: {{value}}</a>
            </div>
          {{/with}}
        </div>

     {{#with actionBlock}}  
         <div class="row col-12">

            <div class="col-12">
             <div class="nav nav-tabs">
            {{#each tabs}}
           
               {{#with this}}
                 <div class="nav-item">
                    <a href="#" class="nav-link {{#if isActive}} active {{/if}}">{{text}}</a>
                 </div>
               {{/with}}
            
            {{/each}}
            </div>
            </div>
                
    <div class='col-12'>
        <hr class='col-12 gy-5 my-5' />
    </div>       
       
        {{#with field}}
         <div class="card p-4">
            <div class="row col-12">

                <div class="col-8">
                  <input placeholder="{{placeholder}}" class="form-control">
                </div>

             {{#with button}}
              <div class="col-4 ">
                 <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
              </div>
             {{/with}}
            </div>
         </div>
        {{/with}}
     

        </div>
      {{/with}}

        <div class="pt-5">
       {{#with feedbackBlock}}
         <h2>{{title}}</h2>

         <div class="pt-5">
        {{#each buttons}}
          <a href="{{link}}" {{#if isWarning}} class="btn btn-warning text-light me-2"{{/if}}
          {{#if isSuccess}} class="btn btn-success text-light me-2"{{/if}}
          {{#if isDanger}} class="btn btn-danger text-light me-2"{{/if}}
          >{{text}}</a>
        {{/each}}
        </div>

    

       {{/with}}
      </div>



      </div>

      <div class="col-4">
        {{#with goodsInfo}}

         <div class="card m-3">
            <div class='nav-item col-6 m-3'>
              <img class='card-img-top' src='{{photo}}' />
              </div>


                <div class="m-3">
                    <h5>{{name}}</h5>
                </div>
         </div>

           <div class="card m-3">
            <div class="m-2 ">
           <h5>{{price}}</h5>
            </div>
             
            {{#each buttons}}
            <div class="nav nav-item m-2">
             <a href="{{link}}" {{#if isPrimary}} class="btn btn-primary text-light" {{/if}}
             {{#if isSecondary}} class="btn btn-secondary text-light"{{/if}}
             >{{text}}</a>
             </div>
            {{/each}}
           </div>

           <div class="card m-3">
            {{#with seller}}
            <div class="m-3">
              <a>{{title}}: <b>{{value}}</b></a>
            </div>
            {{/with}}
           </div>
             
        {{/with}}
      </div>

   </div>
    {{/with}}

   <div class='col-12'>
        <hr class='col-12 gy-5 my-5' />
    </div> 
 
  <div class="card"> 
     {{#each reviewList}}
            
       <div> 
    {{#with this}}
         <div class="card m-3">

        <div>
        {{#with title}}
        <div class="card-header m-1 mt-3">
          <h5 class="ms-3 mt-3">{{userName}}</h5>
          <h6 class="ms-3">{{caption}}</h6>
          <h5 class="text-end mb-5 ">{{date}}</h5>
        </div>
        {{/with}}
         </div>

         <div class="card-body">
            {{#with reviewBody}}

              <div>
                {{#with seller}}
                 <div>
                    <a>{{title}}: <b>{{value}}</b></a>
                 </div>
                {{/with}}
              </div>

               <div>
                {{#with rating}}
                 <div>
                    <a>{{title}}: <b>{{value}}</b></a>
                 </div>
                {{/with}}
               </div>

               <div>
                {{#each text}}
                  <p>{{this}}</p>
                {{/each}}
               </div>

               <div>
                {{#with advantages}}
                 <div>
                    <b>{{title}}:</b>
                    </div>
                    <div>
                    <a>{{text}}</a>
                 </div>
                {{/with}}
               </div>

               <div>
                {{#with disadvantages}}
                 <div>
                    <b>{{title}}:</b>
                    </div>
                    <div>
                    <a>{{text}}</a>
                 </div>
                {{/with}}
               </div>

               <div class="row">
                  {{#each images}}
                  <div class="row col-2">
                   <img class="card-img-top" src="{{this}}">
                   </div>
                  {{/each}}
               </div>

                 
      {{#each coments}}
      <div class="">
        {{#with this}}
          <div class="card ms-3 m-3">
            <h5 class="ms-3 mt-3">{{userName}}</h5>
            <h5 class="text-end me-3">{{date}}</h5>
            <h6 class="ms-3">{{text}}</h6>
          </div>
        {{/with}}
      </div>
      {{/each}}
     
   

            {{/with}}
         </div>
         </div>
    {{/with}}
       </div>

     {{/each}}
</div>

   <div class='col-12'>
        <hr class='col-12 gy-5 my-5' />
    </div> 

    {{> shopaction}}

    <div class='col-12'>
        <hr class='col-12 gy-5 my-5' />
    </div> 

</main>