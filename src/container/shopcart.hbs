<main class='m-3 p-4'>

  <div class='row col-12'>

    {{#with header}}

      <div class='col-2'>
        <h1>{{title}}</h1>
      </div>

      <div class='col-10 text-end'>
        {{#with button}}
          <div class='g-2 pt-3 pb-3'>
            <a
              href='{{link}}'
              class='btn btn-outline-secondary'
            >{{text}}</a>
          </div>
        {{/with}}
      </div>

    {{/with}}

  </div>

       <div class="col-12">
        <hr class="col-12 gy-5 my-5">
       </div>

  {{#each goodsBlock}}
    <div class='card m-2'>
      <div class='card-body'>
        <div class='row col-12'>

          {{#with this}}
            <div class='col-2'>
              <img class='card-img-top' src='{{image}}' />
            </div>

            <div class='col-2'>
              <h3>{{name}}</h3>
              <p>{{description}}</p>
            </div>

            <div class='col-2 m-5'>
              {{#with price}}
                <div>
                  <a>{{title}}</a>
                  <a>{{value}}</a>
                </div>
              {{/with}}
            </div>

            <div class='col-2 m-5'>
              <h5>{{amount}}</h5>
            </div>

          {{/with}}

          <div class="col-2">

         {{#each buttons}}
           <div class="nav-item m-5">
             <div>
               <button 
               {{#if isPrimary}} class="btn btn-primary" {{/if}}
               {{#if isDanger}} class="btn btn-outline-danger" {{/if}}
               >{{text}}</button>
            </div>
          </div>
         {{/each}}

             </div>

        </div>
      </div>
    </div>
  {{/each}}

       <div class="col-12">
        <hr class="col-12 gy-5 my-5">
       </div>


  {{#with total}}
    <div class="row col-12">

        <div class="col-4">
            <div class="m-3">
           <h2>{{title}}</h2>
           <h1>{{amount}}</h1>
           <a><small>{{delivery}}</small></a>
        </div>
        </div>

        <div class="col-8 text-center">
           {{#each buttons}}
              <div class="m-4">
                <a href="{{link}}" {{#if isSuccess}} class="btn btn-success"{{/if}}
                {{#if isOutline}} class="btn btn-outline-success" {{/if}}
                >{{text}}</a>
              </div>
           {{/each}}
        </div>

    </div>
  {{/with}}
  
 <div class="col-12">
   <hr class="col-12 gy-5 my-5">
 </div>

    {{> shopcards}}

  <div class="col-12">
     <hr class="col-12 gy-5 my-5">
  </div>
   
  {{> subscribe}}
   
     <div class="col-12">
     <hr class="col-12 gy-5 my-5">
  </div>

     
</main>