<div>
  {{#with goodsOtherBlock}}
    <div class='m-5'>
      <h3 class='text-center'>{{title}}</h3>
    </div>

    <div class='row'>
      {{#each cards}}
        <section class='col-4'>
          <div class='card'>

            {{#with this}}

              <div class='nav-item'>
                <img class='card-img-top' src='{{image}}' />
                <div>
                  <h4 class='card-title m-3'>
                    {{title}}
                  </h4>
                  <p class='m-3'>{{description}}</p>
                </div>
                <div class='m-3'>
                  {{#if isHot includeZero=true}}<button
                      class='badge rounded-pill text-bg-primary'
                    >Hot</button>{{/if}}
                  {{#if idNew includeZero=true}}<button
                      class='badge rounded-pill text-bg-warning'
                    >New</button>{{/if}}
                </div>
              </div>

            {{/with}}

          </div>
        </section>
      {{/each}}
    </div>
  {{/with}}
</div>